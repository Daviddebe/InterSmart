<Window x:Class="InterSmartV1._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InterSmart" Height="350" Width="525">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Start" x:Name="BtnStart" Click="BtnStart_Click" Background="LightGreen" Grid.Column="2" Grid.Row="3" FontFamily="Poor Richard" FontWeight="Bold" FontSize="18" />
        <Image Grid.ColumnSpan="3" Grid.Column="1" Grid.RowSpan="3" Source="Images/LogoV1.0.PNG" Stretch="Fill"/>
        <Label Grid.Column="0" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="5" FontFamily="Poor Richard" FontWeight="Bold" FontSize="18">Welcome to InterSmart, press the button to start the application.</Label>
    </Grid>
</Window>
